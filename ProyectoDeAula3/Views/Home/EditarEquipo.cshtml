@model ModeloNegocio.IntegrantesEquipo

<h2>Editar Equipo</h2>

@using (Html.BeginForm("ActualizarEquipo", "Home", FormMethod.Post))
{
    @Html.HiddenFor(model => model.Id)

    <div class="form-group">
        @Html.LabelFor(model => model.Nombre, "Nombre")
        @Html.EditorFor(model => model.Nombre, new { htmlAttributes = new { @class = "form-control" } })
    </div>

    <div class="form-group">
        @Html.LabelFor(model => model.Apellidos, "Apellidos")
        @Html.EditorFor(model => model.Apellidos, new { htmlAttributes = new { @class = "form-control" } })
    </div>

    <div class="form-group">
        @Html.LabelFor(model => model.Rol, "Rol")
        @Html.EditorFor(model => model.Rol, new { htmlAttributes = new { @class = "form-control" } })
    </div>

    <div class="form-group">
        @Html.LabelFor(model => model.Email, "Email")
        @Html.EditorFor(model => model.Email, new { htmlAttributes = new { @class = "form-control" } })
    </div>

    <input type="submit" value="Guardar Cambios" class="btn btn-primary" />
}

<div>
    @Html.ActionLink("Volver a la Lista", "MostrarIdeaNegocio")
</div>
